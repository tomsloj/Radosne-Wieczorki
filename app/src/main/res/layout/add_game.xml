<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/addTitle"
        style="@style/DialogText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addTitle"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/nameOfAddedGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/nameHint" />

    <ExpandableListView
        android:id="@+id/categoryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transcriptMode="alwaysScroll"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        />


    <EditText
        android:id="@+id/textOfAddedGame"
        style="@style/TextStyle"
        android:textCursorDrawable="@color/colorAccent"
        android:minLines="5"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:hint="@string/textHint"
        android:autofillHints="auto"
        android:background="@drawable/border"
        />

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/addGameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addGame"
            style="@style/NormalButton"
            android:background="@drawable/blue_line"
            android:layout_marginEnd="15dp"
            />
        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            style="@style/NormalButton"
            android:layout_marginStart="15dp"
            android:background="@drawable/red_line"
            />
    </TableRow>

</LinearLayout>