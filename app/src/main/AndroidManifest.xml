<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:installLocation="preferExternal">


    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.tomsloj.pc.pogodne.splashScreen"
            android:noHistory="true"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>


                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tomsloj.pc.pogodne.displayFavorite"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:parentActivityName="com.tomsloj.pc.pogodne.MainActivity"/>
        <activity android:name="com.tomsloj.pc.pogodne.editFavorites" />
        <activity android:name="com.tomsloj.pc.pogodne.listOfFavorites"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:parentActivityName="com.tomsloj.pc.pogodne.MainActivity"/>
        <activity
            android:name="com.tomsloj.pc.pogodne.search"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:parentActivityName="com.tomsloj.pc.pogodne.MainActivity" />
        <activity
            android:name="com.tomsloj.pc.pogodne.settings"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:parentActivityName="com.tomsloj.pc.pogodne.MainActivity" />
        <activity
            android:name="com.tomsloj.pc.pogodne.display"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:parentActivityName="com.tomsloj.pc.pogodne.MainActivity" />
        <activity
            android:name="com.tomsloj.pc.pogodne.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

            </intent-filter>
        </activity>
        <activity
            android:name="com.tomsloj.pc.pogodne.list"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:parentActivityName="com.tomsloj.pc.pogodne.MainActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="8254f496a5556a990243d85a859d17df22a78074" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>